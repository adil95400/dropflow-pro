#!/bin/bash
# DropFlow Pro - Pre-push Hook
# This script runs before each push to ensure code quality

# Exit on error
set -e

echo "ğŸš€ DropFlow Pre-push Hook"
echo "------------------------"

# Get the current branch
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo "ğŸ“‚ Current branch: $CURRENT_BRANCH"

# Don't run on main/master branches
if [[ "$CURRENT_BRANCH" == "main" || "$CURRENT_BRANCH" == "master" ]]; then
    echo "âš ï¸ Pushing to $CURRENT_BRANCH branch. Running additional checks..."
fi

# Run full test suite
echo "ğŸ§ª Running full test suite..."
npm run test || {
    echo "âŒ Tests failed. Please fix the failing tests before pushing."
    exit 1
}

# Run build to ensure it compiles
echo "ğŸ”¨ Building project..."
npm run build || {
    echo "âŒ Build failed. Please fix the build errors before pushing."
    exit 1
}

# Run type checking
echo "ğŸ” Running TypeScript type checking..."
npm run type-check || {
    echo "âŒ TypeScript check failed. Please fix the type errors before pushing."
    exit 1
}

# Run linting
echo "ğŸ§¹ Running linting..."
npm run lint || {
    echo "âŒ Linting failed. Please fix the linting errors before pushing."
    exit 1
}

# Run security audit
echo "ğŸ”’ Running security audit..."
npm audit --production || {
    echo "âš ï¸ Security vulnerabilities found. Consider fixing them."
    # Don't exit with error, just warn
}

echo "âœ… Pre-push checks passed!"