#!/bin/bash
# DropFlow Pro - Pre-commit Hook
# This script runs before each commit to ensure code quality

# Exit on error
set -e

echo "ğŸ” DropFlow Pre-commit Hook"
echo "--------------------------"

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx)$')

if [ -z "$STAGED_FILES" ]; then
    echo "âœ… No JavaScript/TypeScript files to check"
    exit 0
fi

# Run ESLint on staged files
echo "ğŸ§¹ Running ESLint..."
npx eslint $STAGED_FILES --quiet || {
    echo "âŒ ESLint failed. Please fix the issues before committing."
    exit 1
}

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
npx tsc --noEmit || {
    echo "âŒ TypeScript check failed. Please fix the type errors before committing."
    exit 1
}

# Run tests related to changed files
echo "ğŸ§ª Running tests..."
npx vitest run || {
    echo "âŒ Tests failed. Please fix the failing tests before committing."
    exit 1
}

# Run secret scanner
echo "ğŸ”’ Checking for secrets..."
./scripts/scan-secrets.sh || {
    echo "âŒ Secret scanner found potential secrets. Please review before committing."
    exit 1
}

# Format code
echo "âœ¨ Formatting code..."
npx prettier --write $STAGED_FILES

# Re-add formatted files
git add $STAGED_FILES

echo "âœ… Pre-commit checks passed!"